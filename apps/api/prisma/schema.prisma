generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

generator zod {
  provider = "zod-prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Anime {
  id            Int      @id @unique
  title         String
  titleEnglish  String?
  titleRomanji  String?
  titleFrench   String?
  others        String?
  type          String
  status        String
  popularity    Float
  url           String
  genres        String[]
  urlImage      String
  score         String
  startDateYear String
  nbEps         Int?
  synopsis      String?
  coverUrl      String?
}
