generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Anime {
  id                Int      @id @unique
  titleOriginal     String
  titleEnglish      String?
  titleRomanized    String?
  titleFrench       String?
  alternativeTitles String?
  mediaType         String
  airingStatus      String
  externalUrl       String
  genres            String[]
  coverImageUrl     String
  popularityScore   Float
  averageScore      Float
  startYear         Int
  episodesCount     Int?
  synopsis          String?
  bannerImageUrl    String?
}
