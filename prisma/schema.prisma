generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Anime {
  id              Int       @id @unique
  title           String
  title_english   String?
  title_romanji   String?
  others          String?
  cover_url       String?
  genres          String[]
  nb_eps          Int?
  popularity      Float
  score           String
  start_date_year String
  status          String
  synopsis        String?
  type            String
  url             String
  url_image       String
  title_french    String?
  episodes        Episode[]
}

model Episode {
  id        Int    @id @default(autoincrement())
  time      String
  episode   String
  num       Int
  url       String @unique
  url_image String
  animeId   Int
  anime     Anime  @relation(fields: [animeId], references: [id])
}
